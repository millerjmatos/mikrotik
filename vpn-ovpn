// Vamos ao modelo de arquivo de configuração .ovpn.. //

client
dev tun
proto tcp
remote >>mymikrotik.ddns.net<< >>51194<<
resolv-retry infinite
nobind
persist-key
persist-tun
remote-cert-tls server
cipher AES-256-CBC
auth SHA1
verb 3
route >>10.0.0.0<< 255.255.255.0 >>172.16.0.1<<

